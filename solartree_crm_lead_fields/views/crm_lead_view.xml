<odoo>
    <record id="crm_lead_view_form_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='email_from']" position="before">
                <field name="solartree_code"/>
                <field name="solartree_lead_type_id" widget="selection"/>
                <field name="solartree_lead_modality_id" widget="selection"/>
                <field name="solartree_lead_collective"/>
                <field name="solartree_lead_storage"/>
            </xpath>
            <xpath expr="//div[@class='o_lead_opportunity_form_inline_fields']" position="after">
                <field name="solartree_lead_scope" widget="selection"/>
                <field name="solartree_lead_channel" widget="selection"/>
                <field name="solartree_lead_technical" widget="selection"/>
                <field name="solartree_lead_structure_type" widget="selection"/>
                <field name="solartree_lead_structure_model" widget="selection"/>
            </xpath>
        </field>
    </record>
